
import turtle
import random
import time
from pygame import mixer

# Adding music is optional as per choice.
mixer.pre_init(frequency=48000, size=-16, channels=2, buffer=512)
mixer.init()
mixer.music.load("Tumhiho.mp3") #add your music file name or path

# sets background
bg = turtle.Screen()
bg.bgcolor("green")
mixer.music.play()
mixer.music.stop()# to stop the music -without this it runs continously
